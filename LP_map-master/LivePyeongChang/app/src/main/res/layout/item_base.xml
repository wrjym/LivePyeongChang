<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/ll_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_picto"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                card_view:srcCompat="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/tv_match_nm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/unlive" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_main"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_medal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                card_view:srcCompat="@drawable/gold_medal" />

            <TextView
                android:id="@+id/tv_match_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="95dp"
                android:background="@color/common_google_signin_btn_text_light_focused"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_match_stadium"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/common_google_signin_btn_text_light_focused"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>